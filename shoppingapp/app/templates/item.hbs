<GeneralContainer>
    <div class="product item-detail-page {{if this.isZoomed 'is-Zoomed'}}">
    <Product::Image
    @src = {{this.productImage}}
    @toggleZoom = {{this.toggleZoom}}
    />
    <Product::Details
        @name = {{this.model.name}}
        @price = {{this.model.price}}
        @colors = {{this.model.colors}}
        @color = {{this.colour}}
        @isDetails = {{'true'}}
        @onChangeColor = {{this.onChangeColor}} />
    </div>
    <h5>Features : </h5>
    <ul>
        {{#each this.model.features as |feature|}}
        <li>{{feature}}</li>
        {{/each}}
    </ul>
</GeneralContainer>