<h2>
    {{@rental.title}}
</h2>
<p>
    Nice Find in a nice place like {{@rental.city}}
</p>
<ShareButton
    @text="Check Out {{@rental.title}} on this Site"
    @hashtag="vacation,travel,authentic,blessed"
    @via="emberjs"
>
    Share
</ShareButton>
<article class="rental detailed">
    <Rental::Image
        src={{@rental.image}}
        alt="A Picture of {{@rental.title}}"
    />
    <div class="details">
        <h3>
            About {{@rental.title}}
        </h3>
        <div class="detail owner">
            <span>Owner : </span> {{@rental.owner}}
        </div>
        <div class="detail type">
            <span>Type : </span>{{@rental.type}}
        </div>
        <div class="detail location">
            <span>Location : </span>{{@rental.city}}
        </div>
        <div class="detail bedroomes">
            <span>Number of bedroomes : </span>{{@rental.bedrooms}}
        </div>
        <div class="detail description">
            <p>{{@rental.description}}</p>
        </div>
    </div>
        <Map
    @lat={{@rental.location.lat}}
    @lng={{@rental.location.lng}}
    @zoom="9"
    @width="120"
    @height="150"
    alt="A map of {{@rental.title}}"
    />

</article>