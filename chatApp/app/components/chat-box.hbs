<div class="chat-box-overlay"> 
    <h1> Chat Application </h1>  
</div>
<div class="chat-logs">
    {{#each this.messages as |message|}}
    <div>{{message.message}}</div>
    {{/each}}
      {{#each this.socket.receivedMessage as |message|}}
      <div>
        {{message}}
      </div>
      {{/each}}
    
</div>
<footer class="chat-input">
  {{!-- ID : {{@model.id}} --}}
      <form>
        <Input @type="text" @value={{this.query}} id="chat-input" placeholder="Send a message..."/>
      <button type="button" class="chat-submit" id="chat-submit" {{on "click" (fn this.sendMessage @model.id)}}><i class="material-icons">send</i></button>
      </form>    
</footer>

